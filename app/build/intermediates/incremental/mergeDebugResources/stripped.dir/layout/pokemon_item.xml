<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom|center"
        android:background="@drawable/rectangle_tangerine_rounded"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/numeroPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="001"
            android:textColor="@color/azul_numero_pokemon"
            android:textFontWeight="600"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/nombrePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Bulbasaur"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fotoPokemon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center|top"
        android:paddingBottom="-10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bulbasaur" />

</androidx.cardview.widget.CardView>